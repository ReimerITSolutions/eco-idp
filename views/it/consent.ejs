  <div class="container">
    <div class="login">
    <div class="dialog" >
        <div class="block" style="padding:1em;">
            <p class="brand" ><img src="../Logo_ECO.png" style="width:40%;" alt=""/></p>

            <% if(currentScopeList.length>0) {%>
              <p>
              <b><%=appName %></b> has already access to the following data:
              </p>
              <ul>
              <% for(var i=0; i<currentScopeList.length; i++) {%>
                 <li><%= currentScopeList[i] %></li>
              <% } %>
              </ul>
            <% }%>

            <% if(newScopeList.length>0) {%>
              <p><b><%=appName %></b> chiede  <% if(currentScopeList.length>0) { %>additional<%}%> di accedere ai seguenti dati:
              </p>
              <ul>
              <% for(var i=0; i<newScopeList.length; i++) {%>
                 <li><%= newScopeList[i] %></li>
              <% } %>
              </ul>
            <% }%>

            <div class="form-group">
                <% if(legal_terms_url){%>
                <a href="<%=legal_terms_url%>" class="pull-left" style="font-size:0.9em;" target="_blank" ><i>Termini legali</i></a>
                <%}%>

                <% if(privacy_policy_url){%>
                <a href="<%=privacy_policy_url%>" class="pull-right" style="font-size:0.9em;" target="_blank" ><i>Informativa sulla Privacy</i></a>
                <div class="clearfix"></div>
                <%}%>
            </div>

            <form method="POST">
                <div class="form-actions">
                    <input class="btn btn-success pull-right" type="submit" value="Ok" name="ok"/>
                    <input class="btn pull-left" type="submit" value="Annulla" name="cancel"/>
                    <div class="clearfix"></div>
                </div>
            </form>



        </div>
    </div>
    </div>
</div>
</body>
</html>