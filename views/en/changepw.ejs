<div class="login">
  <div class="">
      <div class="block" style="padding:1em;">
      <img src="../Logo_ECO.png" style="width:30%;margin-bottom:10px;" alt=""/>
            <div class="block-header">
                <h2>Change password</h2>
            </div>


        <% if (errors.length>0) {%>
        <div id="eco-register-errors">
        I'm sorry. The following error(s) occurred while processing your request:
            <ul>
              <% for(var i=0; i<errors.length; i++) {%>
                 <li><%= errors[i] %> </li>
              <% } %>
            </ul>
        </div>
        <% } %>


        <form role="form" id="changepw" method="POST">
          <p>
          Please identify yourself by filling the form below. Use the temporary password you received by mail and choose a valid new one.
          </p>
          <div class="form-group" >
              <label for="email" class="required">E-mail
                  <input id="email" size="50" type="email" name="email" class="form-control" placeholder="Enter email"  type="email" required data-email-msg="Email format is not valid" validationMessage="Please enter a valid emailadress" data-bind="value: email" />
              </label>
          </div>


            <label for="oldpassword" class="required">Old password</label>
            <div class="input-group">
                <input id="oldpassword" size="50" type="password" name="oldpassword" class="form-control" placeholder="Your old password"  data-bind="value: oldpassword"/>
            </div>

            <label for="newpassword" class="required">New password</label>
            <div class="input-group">
                <input id="newpassword" size="50" type="password" name="newpassword" class="form-control" placeholder="Your new password"  data-bind="value: newpassword"/>
                <span id="pwlabel" class="input-group-addon pwinvalid"></span>
            </div>

            <label for="newpassword2" class="sr-only">Re-type new password</label>
            <div class="input-group">
                <input id="newpassword2" size="50" type="password" name="newpassword2" class="form-control" placeholder="Retype the new password"  data-bind="value: newpassword2"/>
            </div>

          <div class="form-actions">
            <a id="btnChange" href="#" class="btn btn-success pull-left">Change password</a>
            <a id="btnCancel" href="#" class="btn pull-right">cancel</a>

            <div class="clearfix"></div>
          </div>

        </form>
    </div>
  </div>
</div>

